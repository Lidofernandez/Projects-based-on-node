html(lang='en')
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='description', content='A portfolio template that uses Material Design Lite.')
    meta(name='viewport', content='width=device-width, initial-scale=1.0, minimum-scale=1.0')
    title MDL-Static Website
    link(rel='stylesheet', href='https://fonts.googleapis.com/css?family=Roboto:regular,bold,italic,thin,light,bolditalic,black,medium&lang=en')
    link(rel='stylesheet', href='/material-design-lite/material.min.css')
    link(rel='stylesheet', href='/styles/main.css')
    link(rel='stylesheet', href='https://fonts.googleapis.com/icon?family=Material+Icons')
  body
    .mdl-layout.mdl-js-layout.mdl-layout--fixed-header
      header.mdl-layout__header.mdl-layout__header--waterfall.portfolio-header
        .mdl-layout__header-row.portfolio-logo-row
          span.mdl-layout__title
            .portfolio-logo
            h1
            span.mdl-layout__title #{title}
        .mdl-layout__header-row.portfolio-navigation-row.mdl-layout--large-screen-only
          nav.mdl-navigation.mdl-typography--body-1-force-preferred-font
            a.mdl-navigation__link(href='/') Portfolio
            a.mdl-navigation__link(href='blog') Blog
            a.mdl-navigation__link(href='about') About
            a.mdl-navigation__link(href='contact') Contact
      .mdl-layout__drawer.mdl-layout--small-screen-only
        nav.mdl-navigation.mdl-typography--body-1-force-preferred-font
          a.mdl-navigation__link(href='index') Portfolio
          a.mdl-navigation__link(href='blog') Blog
          a.mdl-navigation__link(href='about') About
          a.mdl-navigation__link(href='contact') Contact
      main.mdl-layout__content
        block content
      footer.mdl-mini-footer
        .mdl-mini-footer__left-section
          .mdl-logo Simple portfolio website
        .mdl-mini-footer__right-section
          ul.mdl-mini-footer__link-list
            li
              a(href='#') Help
            li
              a(href='#') Privacy & Terms
    script(src='/material-design-lite/material.min.js')
