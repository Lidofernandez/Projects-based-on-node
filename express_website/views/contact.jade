extends layout

block content
  .contact-form-layout
    .contact-form-layout__content
      .mdl-card.mdl-shadow--6dp
        .mdl-card__title.mdl-color--primary.mdl-color-text--white
          h2.mdl-card__title-text Acme Co.
        .mdl-card__supporting-text
          form(method='post', action='contact/send')
            .mdl-textfield.mdl-js-textfield
              input#name.mdl-textfield__input(type='text')
              label.mdl-textfield__label(for='name') Name
            .mdl-textfield.mdl-js-textfield
              input#email.mdl-textfield__input(type='email')
              label.mdl-textfield__label(for='email') Email
            .mdl-textfield.mdl-js-textfield
              textarea#message.mdl-textfield__input(type='text', rows='3', maxrows='6')
              label.mdl-textfield__label(for='message') Enter Message
            .mdl-card__actions.mdl-card--border
              button.mdl-button.mdl-button--colored.mdl-js-button.mdl-js-ripple-effect(type='submit') Submit